<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TimeClient.ViewModels;assembly=TimeClient"
		xmlns:views="clr-namespace:TimeClient.Views;assembly=TimeClient"
        x:Class="TimeClient.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="TimeClient"
		MinWidth="300"
		MinHeight="300"
		WindowStartupLocation="CenterScreen"
        FontSize="14"
        Foreground="{StaticResource SystemChromeHighColor}"
        Background="{x:Null}"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="SystemChrome"
		ExtendClientAreaTitleBarHeightHint="-1"
		TransparencyLevelHint="AcrylicBlur">


   <Window.DataContext>
	  <vm:MainWindowViewModel/>
   </Window.DataContext>
   <Window.Styles>
	  <Style Selector="TitleBar:fullscreen > Panel > Panel > Border">
		 <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}" />
	  </Style>
   </Window.Styles>
   <Panel>
	  <Panel Margin="{Binding #MainWindow.OffScreenMargin}">
		 <DockPanel HorizontalAlignment="Stretch">
			<ExperimentalAcrylicBorder DockPanel.Dock="Left" Width="240">
			   <ExperimentalAcrylicBorder.Material>
				  <ExperimentalAcrylicMaterial TintColor="{DynamicResource SystemChromeLowColor}" MaterialOpacity="0.85" TintOpacity="0.5" />
			   </ExperimentalAcrylicBorder.Material>
			</ExperimentalAcrylicBorder>
			<ExperimentalAcrylicBorder IsHitTestVisible="False">
			   <ExperimentalAcrylicBorder.Material>
				  <ExperimentalAcrylicMaterial TintColor="{DynamicResource SystemChromeHighColor}" MaterialOpacity="0.55" TintOpacity="0.5" />
			   </ExperimentalAcrylicBorder.Material>
			   <TextBlock Text="{Binding #TabControl.SelectedItem.Header}" Margin="40 20" FontSize="32" FontWeight="Light" />
			</ExperimentalAcrylicBorder>
		 </DockPanel>

		 <TabControl x:Name="TabControl" Classes="sidebar" Margin="0 40 0 20">
			<TabItem Header="Overview">

			</TabItem>
			<TabItem Header="Basic Input"  >

			</TabItem>
			<TabItem Header="Collections">

			</TabItem>
			<TabItem Header="Date and Time">
			</TabItem>
			<TabItem Header="Layout">
			</TabItem>
			<TabItem Header="Media">
			</TabItem>
			<TabItem Header="Menus">
			</TabItem>
			<TabItem Header="Navigation">

			</TabItem>
			<TabItem Header="Scrolling">

			</TabItem>
			<TabItem Header="Status and Info">

			</TabItem>
			<TabItem Header="Styles">

			</TabItem>
			<TabItem Header="Text">

			</TabItem>
		 </TabControl>
	  </Panel>
   </Panel>

</Window>
